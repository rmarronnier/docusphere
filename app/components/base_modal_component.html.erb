<div id="<%= @id %>"
     class="hidden fixed inset-0 z-50 overflow-y-auto"
     aria-labelledby="<%= @id %>-title"
     aria-modal="true"
     role="dialog">
  
  <!-- Backdrop -->
  <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"
       aria-hidden="true"
       <% if @dismissible %>data-action="click->modal#close"<% end %>></div>
  
  <!-- Modal container -->
  <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
    <div class="<%= modal_panel_classes %>">
      <% if @dismissible %>
        <!-- Close button -->
        <div class="absolute top-0 right-0 pt-4 pr-4">
          <button type="button"
                  class="rounded-md bg-white text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2"
                  data-action="click->modal#close">
            <span class="sr-only">Close</span>
            <%= render(Ui::IconComponent.new(name: :x, size: 6)) %>
          </button>
        </div>
      <% end %>
      
      <% if @title %>
        <!-- Header -->
        <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
          <h3 class="text-lg font-medium leading-6 text-gray-900" id="<%= @id %>-title">
            <%= @title %>
          </h3>
        </div>
      <% end %>
      
      <!-- Body -->
      <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
        <%= render_body_content %>
      </div>
      
      <% if has_footer? %>
        <!-- Footer -->
        <div class="bg-gray-50 px-4 py-3 sm:flex sm:flex-row-reverse sm:px-6">
          <%= render_footer_content %>
        </div>
      <% end %>
    </div>
  </div>
</div>