<div class="bg-white shadow rounded-lg">
  <div class="px-4 py-5 sm:p-6">
    <h3 class="text-lg leading-6 font-medium text-gray-900 flex items-center mb-4">
      <svg class="w-5 h-5 mr-2 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
      </svg>
      Actions rapides
    </h3>
    
    <div class="grid grid-cols-1 gap-4">
      <% quick_actions.each do |action| %>
        <%= link_to action[:path], 
                    class: "group relative rounded-lg p-4 transition-all duration-200 hover:shadow-md #{action_color_classes(action[:color])}" do %>
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <%= action_icon_svg(action[:icon]).html_safe %>
              </svg>
            </div>
            <div class="ml-4 flex-1">
              <p class="text-sm font-medium">
                <%= action[:title] %>
              </p>
              <p class="text-xs opacity-75">
                <%= action[:description] %>
              </p>
            </div>
            <div class="flex-shrink-0 ml-2">
              <svg class="h-5 w-5 opacity-50 group-hover:opacity-100 transition-opacity" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    
    <div class="mt-6 border-t border-gray-200 pt-4">
      <div class="flex items-center justify-between text-sm">
        <span class="text-gray-500">
          Besoin d'aide ?
        </span>
        <%= link_to "Centre d'aide", helpers.help_path, 
                    class: "font-medium text-blue-600 hover:text-blue-700" %>
      </div>
    </div>
  </div>
</div>