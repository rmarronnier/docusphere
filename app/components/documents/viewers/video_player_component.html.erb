<div class="video-player-container h-full bg-black">
  <div class="h-full flex flex-col">
    <!-- Video Player -->
    <div class="flex-1 flex items-center justify-center">
      <video controls
             controlsList="nodownload"
             class="max-w-full max-h-full"
             <% if video_poster %>poster="<%= video_poster %>"<% end %>
             data-video-player-target="video">
        <source src="<%= video_url %>" type="<%= video_type %>">
        Your browser does not support the video tag.
      </video>
    </div>
    
    <!-- Custom Controls Bar -->
    <% if show_actions %>
      <div class="video-controls bg-gray-900 text-white p-2 flex items-center justify-between">
        <div class="text-sm">
          <%= document.title %>
        </div>
        <%= download_button %>
      </div>
    <% end %>
  </div>
</div>