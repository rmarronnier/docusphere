<div class="pdf-viewer-container h-full" data-controller="pdf-viewer">
  <!-- PDF Toolbar -->
  <div class="pdf-toolbar bg-gray-100 border-b flex items-center justify-between p-2">
    <!-- Navigation Controls -->
    <div class="flex items-center space-x-2">
      <%= icon_button("chevron_left", "Previous Page", data: { action: "click->pdf-viewer#previousPage" }) %>
      <span class="text-sm text-gray-600">Page </span>
      <input type="number" 
             value="1" 
             min="1"
             class="w-12 px-2 py-1 text-sm border rounded"
             data-pdf-viewer-target="pageInput"
             data-action="change->pdf-viewer#goToPage">
      <span class="text-sm text-gray-600"> of </span>
      <span class="text-sm text-gray-600" data-pdf-viewer-target="totalPages">1</span>
      <%= icon_button("chevron_right", "Next Page", data: { action: "click->pdf-viewer#nextPage" }) %>
    </div>
    
    <!-- Zoom Controls -->
    <div class="flex items-center space-x-2">
      <%= icon_button("minus", "Zoom Out", data: { action: "click->pdf-viewer#zoomOut" }) %>
      <select class="px-2 py-1 text-sm border rounded"
              data-pdf-viewer-target="zoomSelect"
              data-action="change->pdf-viewer#setZoom">
        <option value="auto">Auto</option>
        <option value="0.5">50%</option>
        <option value="0.75">75%</option>
        <option value="1">100%</option>
        <option value="1.25">125%</option>
        <option value="1.5">150%</option>
        <option value="2">200%</option>
        <option value="fit-width">Fit Width</option>
        <option value="fit-page">Fit Page</option>
      </select>
      <%= icon_button("plus", "Zoom In", data: { action: "click->pdf-viewer#zoomIn" }) %>
    </div>
    
    <!-- View Controls -->
    <div class="flex items-center space-x-2">
      <%= icon_button("arrows_pointing_out", "Fullscreen", data: { action: "click->pdf-viewer#fullscreen" }) %>
      <%= icon_button("printer", "Print", data: { action: "click->pdf-viewer#print" }) %>
      <% if show_actions %>
        <%= download_button %>
      <% end %>
    </div>
  </div>
  
  <!-- PDF Frame -->
  <iframe src="<%= pdf_viewer_url %>"
          class="w-full h-full border-0"
          loading="lazy"
          data-pdf-viewer-target="frame">
  </iframe>
</div>