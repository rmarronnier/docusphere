<div class="bg-white overflow-hidden shadow rounded-lg hover:shadow-md transition-shadow duration-200">
  <div class="p-4">
    <div class="flex items-start space-x-3">
      <!-- Icône du document -->
      <div class="flex-shrink-0">
        <div class="h-10 w-10 bg-primary-100 rounded-lg flex items-center justify-center">
          <svg class="h-6 w-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
        </div>
      </div>

      <!-- Contenu du document -->
      <div class="flex-1 min-w-0">
        <div class="flex items-center justify-between">
          <h3 class="text-sm font-medium text-gray-900 truncate">
            <%= link_to document.title, document_path(document), class: "hover:text-primary-600" %>
          </h3>
          <span class="<%= status_badge_classes %>">
            <%= t("documents.status.#{document.status}") %>
          </span>
        </div>
        
        <% if document.description.present? %>
          <p class="mt-1 text-sm text-gray-500 line-clamp-2">
            <%= document.description %>
          </p>
        <% end %>

        <!-- Métadonnées -->
        <div class="mt-2 flex items-center text-xs text-gray-500 space-x-4">
          <span><%= formatted_date %></span>
          <span><%= file_size %></span>
          <span><%= document.document_type.upcase %></span>
        </div>

        <!-- Tags -->
        <% if document.tags.any? %>
          <div class="mt-2 flex flex-wrap gap-1">
            <% document.tags.limit(3).each do |tag| %>
              <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">
                <%= tag.name %>
              </span>
            <% end %>
            <% if document.tags.count > 3 %>
              <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">
                +<%= document.tags.count - 3 %>
              </span>
            <% end %>
          </div>
        <% end %>
      </div>

      <!-- Menu d'actions -->
      <div class="flex-shrink-0 relative" data-controller="dropdown">
        <button type="button" 
                class="w-8 h-8 bg-white inline-flex items-center justify-center text-gray-400 rounded-full hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500"
                data-action="click->dropdown#toggle">
          <span class="sr-only">Ouvrir les options</span>
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z"></path>
          </svg>
        </button>

        <div class="hidden origin-top-right absolute right-0 mt-2 w-48 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 focus:outline-none z-10"
             data-dropdown-target="menu">
          <div class="py-1">
            <%= link_to "Voir", document_path(document), class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
            <%= link_to "Modifier", edit_document_path(document), class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
            <%= link_to "Télécharger", document_path(document, format: :pdf), class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
            <%= link_to "Partager", new_document_share_path(document), class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
            <div class="border-t border-gray-100"></div>
            <%= link_to "Supprimer", document_path(document), 
                method: :delete, 
                data: { confirm: "Êtes-vous sûr ?" },
                class: "block px-4 py-2 text-sm text-red-700 hover:bg-red-50" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>