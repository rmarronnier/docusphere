<nav class="bg-white shadow-sm border-b border-gray-200">
  <div class="mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <!-- Left side - Navigation -->
      <div class="flex">
        <!-- Logo/Home -->
        <div class="flex-shrink-0 flex items-center">
          <%= link_to immo_promo_dashboard_path, class: "text-xl font-bold text-gray-900" do %>
            <span class="text-blue-600">Immo</span>::<span class="text-gray-600">Promo</span>
          <% end %>
        </div>
        
        <!-- Navigation Links -->
        <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
          <%= link_to "Tableau de bord", immo_promo_dashboard_path,
                      class: "#{on_dashboard? ? 'border-blue-500 text-gray-900' : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'} inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium" %>
          
          <%= link_to "Projets", immo_promo_projects_path,
                      class: "#{controller_name == 'projects' && action_name == 'index' ? 'border-blue-500 text-gray-900' : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'} inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium" %>
          
          <% if current_project %>
            <span class="inline-flex items-center px-1 pt-1 text-sm text-gray-400">/</span>
            <%= link_to current_project.name, immo_promo_project_path(current_project),
                        class: "border-blue-500 text-gray-900 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium" %>
          <% end %>
        </div>
      </div>

      <!-- Right side - Actions -->
      <div class="flex items-center space-x-4">
        <% if on_project_view? %>
          <!-- Project-specific actions -->
          <div class="flex items-center space-x-2">
            <% if can_manage_stakeholders? %>
              <%= link_to immo_promo_project_stakeholders_path(current_project),
                          class: "text-gray-500 hover:text-gray-700 px-3 py-2 rounded-md text-sm font-medium",
                          title: "Intervenants" do %>
                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
              <% end %>
            <% end %>
            
            <% if can_manage_permits? %>
              <%= link_to immo_promo_project_permits_path(current_project),
                          class: "text-gray-500 hover:text-gray-700 px-3 py-2 rounded-md text-sm font-medium",
                          title: "Autorisations" do %>
                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
              <% end %>
            <% end %>
            
            <% if can_manage_budget? %>
              <%= link_to immo_promo_project_budgets_path(current_project),
                          class: "text-gray-500 hover:text-gray-700 px-3 py-2 rounded-md text-sm font-medium",
                          title: "Budget" do %>
                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              <% end %>
            <% end %>
            
            <div class="border-l border-gray-300 h-6 mx-2"></div>
            
            <% if can_edit_project? %>
              <%= link_to "Modifier", edit_immo_promo_project_path(current_project),
                          class: "text-gray-500 hover:text-gray-700 px-3 py-2 rounded-md text-sm font-medium" %>
            <% end %>
          </div>
        <% end %>
        
        <!-- New Project Button -->
        <% if can_create_project? %>
          <button type="button"
                  class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
                  data-action="click->immo-promo-navbar#openNewProjectModal">
            <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Nouveau projet
          </button>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Mobile menu -->
  <div class="sm:hidden hidden" data-immo-promo-navbar-target="mobileMenu">
    <div class="pt-2 pb-3 space-y-1">
      <%= link_to "Tableau de bord", immo_promo_dashboard_path,
                  class: "#{on_dashboard? ? 'bg-blue-50 border-blue-500 text-blue-700' : 'border-transparent text-gray-500 hover:bg-gray-50 hover:border-gray-300 hover:text-gray-700'} block pl-3 pr-4 py-2 border-l-4 text-base font-medium" %>
      
      <%= link_to "Projets", immo_promo_projects_path,
                  class: "#{controller_name == 'projects' && action_name == 'index' ? 'bg-blue-50 border-blue-500 text-blue-700' : 'border-transparent text-gray-500 hover:bg-gray-50 hover:border-gray-300 hover:text-gray-700'} block pl-3 pr-4 py-2 border-l-4 text-base font-medium" %>
    </div>
  </div>
</nav>

<!-- New Project Modal -->
<div class="hidden fixed z-50 inset-0 overflow-y-auto" data-immo-promo-navbar-target="newProjectModal">
  <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
    <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" data-action="click->immo-promo-navbar#closeNewProjectModal"></div>

    <span class="hidden sm:inline-block sm:align-middle sm:h-screen">&#8203;</span>

    <div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
      <form action="<%= immo_promo_projects_path %>" method="post" data-turbo="false">
        <%= csrf_meta_tags %>
        
        <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
          <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">
            Nouveau projet immobilier
          </h3>
          
          <div class="space-y-4">
            <div>
              <label for="project_name" class="block text-sm font-medium text-gray-700">Nom du projet</label>
              <input type="text" name="immo_promo_project[name]" id="project_name" required
                     class="mt-1 focus:ring-blue-500 focus:border-blue-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md">
            </div>
            
            <div>
              <label for="project_reference" class="block text-sm font-medium text-gray-700">Référence</label>
              <input type="text" name="immo_promo_project[reference]" id="project_reference" required
                     class="mt-1 focus:ring-blue-500 focus:border-blue-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md"
                     placeholder="PROJ-001">
            </div>
            
            <div>
              <label for="project_type" class="block text-sm font-medium text-gray-700">Type de projet</label>
              <select name="immo_promo_project[project_type]" id="project_type" required
                      class="mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                <option value="residential">Résidentiel</option>
                <option value="commercial">Commercial</option>
                <option value="mixed">Mixte</option>
                <option value="industrial">Industriel</option>
              </select>
            </div>
            
            <div class="grid grid-cols-2 gap-4">
              <div>
                <label for="project_start_date" class="block text-sm font-medium text-gray-700">Date de début</label>
                <input type="date" name="immo_promo_project[start_date]" id="project_start_date" required
                       class="mt-1 focus:ring-blue-500 focus:border-blue-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md">
              </div>
              
              <div>
                <label for="project_end_date" class="block text-sm font-medium text-gray-700">Date de fin prévisionnelle</label>
                <input type="date" name="immo_promo_project[end_date]" id="project_end_date" required
                       class="mt-1 focus:ring-blue-500 focus:border-blue-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md">
              </div>
            </div>
            
            <div>
              <label for="project_description" class="block text-sm font-medium text-gray-700">Description</label>
              <textarea name="immo_promo_project[description]" id="project_description" rows="3"
                        class="mt-1 focus:ring-blue-500 focus:border-blue-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md"></textarea>
            </div>
          </div>
        </div>
        
        <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
          <button type="submit"
                  class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-blue-600 text-base font-medium text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 sm:ml-3 sm:w-auto sm:text-sm">
            Créer le projet
          </button>
          <button type="button"
                  class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm"
                  data-action="click->immo-promo-navbar#closeNewProjectModal">
            Annuler
          </button>
        </div>
      </form>
    </div>
  </div>
</div>