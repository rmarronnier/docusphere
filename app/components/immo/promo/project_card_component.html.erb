<div class="bg-white overflow-hidden shadow rounded-lg hover:shadow-lg transition-shadow duration-200">
  <div class="p-6">
    <!-- Project Header -->
    <div class="flex items-center justify-between mb-4">
      <div class="flex items-center space-x-3">
        <div class="flex-shrink-0">
          <div class="w-10 h-10 bg-indigo-100 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-4m-5 0H9m0 0H5m4 0V9a2 2 0 012-2h2a2 2 0 012 2v12"></path>
            </svg>
          </div>
        </div>
        <div class="flex-1 min-w-0">
          <h3 class="text-lg font-medium text-gray-900 truncate">
            <%= link_to project.name, project, class: "hover:text-indigo-600" %>
          </h3>
          <p class="text-sm text-gray-500"><%= project.reference %></p>
        </div>
      </div>
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= status_class %>">
        <%= project.status.humanize %>
      </span>
    </div>

    <!-- Project Info -->
    <div class="space-y-2 mb-4">
      <div class="flex justify-between text-sm">
        <span class="text-gray-500">Type:</span>
        <span class="text-gray-900"><%= project.project_type.humanize %></span>
      </div>
      <% if project.total_units %>
        <div class="flex justify-between text-sm">
          <span class="text-gray-500">Logements:</span>
          <span class="text-gray-900"><%= project.total_units %></span>
        </div>
      <% end %>
      <% if formatted_surface_area %>
        <div class="flex justify-between text-sm">
          <span class="text-gray-500">Surface:</span>
          <span class="text-gray-900"><%= formatted_surface_area %> m²</span>
        </div>
      <% end %>
      <% if project.project_manager %>
        <div class="flex justify-between text-sm">
          <span class="text-gray-500">Chef de projet:</span>
          <span class="text-gray-900"><%= project.project_manager.display_name %></span>
        </div>
      <% end %>
    </div>

    <!-- Progress Bar -->
    <div class="mb-4">
      <div class="flex items-center justify-between text-sm mb-1">
        <span class="text-gray-500">Avancement</span>
        <span class="text-gray-900 font-medium"><%= project.completion_percentage %>%</span>
      </div>
      <div class="w-full bg-gray-200 rounded-full h-2">
        <div class="<%= progress_color %> h-2 rounded-full transition-all duration-300" 
             style="width: <%= project.completion_percentage %>%"></div>
      </div>
    </div>

    <!-- Dates -->
    <div class="flex justify-between text-sm text-gray-500 mb-4">
      <span>Début: <%= formatted_start_date %></span>
      <span>Fin: <%= formatted_end_date %></span>
    </div>

    <!-- Actions -->
    <% if show_actions %>
      <div class="flex justify-between items-center pt-4 border-t border-gray-200">
        <%= link_to "Voir détails", project, 
                    class: "text-indigo-600 hover:text-indigo-900 text-sm font-medium" %>
        <div class="flex space-x-2">
          <% if helpers.policy(project).edit? %>
            <%= link_to "Éditer", [:edit, project], 
                        class: "text-gray-400 hover:text-gray-600" %>
          <% end %>
          <% if helpers.policy(project).destroy? %>
            <%= link_to "Supprimer", project, method: :delete,
                        confirm: "Êtes-vous sûr de vouloir supprimer ce projet ?",
                        class: "text-red-400 hover:text-red-600" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Alerts if any -->
  <% if is_delayed? %>
    <div class="bg-red-50 border-l-4 border-red-400 p-3">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm text-red-700">Projet en retard</p>
        </div>
      </div>
    </div>
  <% end %>
</div>