<div id="<%= id %>" <%= backdrop_attrs.map { |k, v| "#{k}=\"#{v}\"" }.join(" ").html_safe %>>
  <div class="relative p-4 w-full max-h-full">
    <div class="<%= modal_classes %>">
      <div class="relative bg-white rounded-lg shadow">
        <!-- Modal header -->
        <% if header? || title.present? || closable %>
          <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t">
            <% if header? %>
              <%= header %>
            <% elsif title.present? %>
              <h3 class="text-lg font-semibold text-gray-900">
                <%= title %>
              </h3>
            <% end %>
            
            <% if closable %>
              <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center" data-modal-hide="<%= id %>">
                <svg class="w-3 h-3" aria-hidden="true" fill="none" viewBox="0 0 14 14">
                  <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                </svg>
                <span class="sr-only">Fermer modal</span>
              </button>
            <% end %>
          </div>
        <% end %>
        
        <!-- Modal body -->
        <% if body? %>
          <div class="p-4 md:p-5 space-y-4">
            <%= body %>
          </div>
        <% else %>
          <%= content %>
        <% end %>
        
        <!-- Modal footer -->
        <% if footer? %>
          <div class="flex items-center p-4 md:p-5 border-t border-gray-200 rounded-b">
            <%= footer %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>