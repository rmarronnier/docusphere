<% if custom_content %>
  <%= custom_content %>
<% else %>
  <div class="text-center py-12">
    <% if show_icon %>
      <div class="mx-auto h-12 w-12 text-gray-400">
        <%= render Ui::IconComponent.new(name: icon.to_sym, size: 12, css_class: "text-gray-400") %>
      </div>
    <% end %>
    <p class="mt-2 text-sm text-gray-500">
      <%= message %>
    </p>
  </div>
<% end %>