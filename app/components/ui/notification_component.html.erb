<div class="<%= wrapper_classes %>">
  <div class="flex">
    <div class="flex-shrink-0">
      <svg class="h-5 w-5 <%= icon_color %>" fill="currentColor" viewBox="0 0 20 20">
        <%= raw(icon_path) %>
      </svg>
    </div>
    <div class="ml-3 flex-1">
      <% if title.present? %>
        <h3 class="text-sm font-medium <%= text_color %>">
          <%= title %>
        </h3>
      <% end %>
      <div class="<%= title.present? ? 'mt-2' : '' %> text-sm <%= content_color %>">
        <%= content %>
      </div>
    </div>
    <% if dismissible %>
      <div class="ml-auto pl-3">
        <div class="-mx-1.5 -my-1.5">
          <button type="button" 
                  class="inline-flex rounded-md p-1.5 <%= icon_color %> hover:bg-opacity-20 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-<%= type %>-50 focus:ring-<%= type %>-600"
                  data-action="click->notification#dismiss">
            <span class="sr-only">Fermer</span>
            <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
            </svg>
          </button>
        </div>
      </div>
    <% end %>
  </div>
</div>