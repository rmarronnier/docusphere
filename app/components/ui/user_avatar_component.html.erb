<%= content_tag wrapper_tag, class: wrapper_classes, href: href, data: { tooltip: show_tooltip ? tooltip_text : nil } do %>
  <span class="<%= avatar_classes %>" aria-hidden="true">
    <%= initials %>
  </span>
  <% if show_status %>
    <span class="<%= status_classes %>" aria-label="<%= status.to_s.humanize %>"></span>
  <% end %>
  <% if href.present? %>
    <span class="sr-only">View <%= tooltip_text %> profile</span>
  <% end %>
<% end %>