<nav class="flex mb-6" aria-label="Breadcrumb">
  <ol role="list" class="flex items-center space-x-4">
    <% items.each_with_index do |breadcrumb, index| %>
      <li>
        <div class="flex items-center">
          <% if index > 0 %>
            <svg class="flex-shrink-0 h-5 w-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path d="M5.555 17.776l8-16 .894.448-8 16-.894-.448z"/>
            </svg>
          <% end %>
          <% if index == items.length - 1 %>
            <span class="<%= index > 0 ? 'ml-4' : '' %> text-sm font-medium text-gray-500"><%= breadcrumb[:name] %></span>
          <% else %>
            <%= link_to breadcrumb[:name], breadcrumb[:path], 
                        class: "#{index > 0 ? 'ml-4' : ''} text-sm font-medium text-gray-500 hover:text-gray-700" %>
          <% end %>
        </div>
      </li>
    <% end %>
  </ol>
</nav>