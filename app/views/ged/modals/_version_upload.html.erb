<!-- Modal Version Upload -->
<div id="versionUploadModal" class="fixed inset-0 z-50 overflow-y-auto hidden version-upload-modal" aria-labelledby="modal-title" role="dialog" aria-modal="true">
  <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
    <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true" onclick="closeModal('versionUploadModal')"></div>

    <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>

    <div class="relative inline-block align-bottom bg-white rounded-lg px-4 pt-5 pb-4 text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full sm:p-6">
      <div>
        <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-indigo-100">
          <svg class="h-6 w-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"/>
          </svg>
        </div>
        <div class="mt-3 text-center sm:mt-5">
          <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-title">
            Créer une nouvelle version
          </h3>
          <div class="mt-2">
            <p class="text-sm text-gray-500">
              Téléversez une nouvelle version de ce document.
            </p>
          </div>
        </div>
      </div>

      <form id="versionUploadForm" action="<%= ged_create_document_version_path(@document) %>" method="post" enctype="multipart/form-data" class="mt-5 sm:mt-6" accept-charset="UTF-8" data-remote="false">
        <%= token_tag %>
        <div class="space-y-4">
          <div>
            <label for="version_file" class="block text-sm font-medium text-gray-700">
              Fichier *
            </label>
            <div class="mt-1">
              <input type="file" 
                     id="version_file" 
                     name="version[file]" 
                     required
                     class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md">
            </div>
            <p class="mt-1 text-sm text-gray-500">
              Le nouveau fichier remplacera la version actuelle
            </p>
          </div>

          <div>
            <label for="version_comment" class="block text-sm font-medium text-gray-700">
              Commentaire de version *
            </label>
            <div class="mt-1">
              <textarea id="version_comment" 
                        name="version[comment]" 
                        rows="3"
                        required
                        class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md"
                        placeholder="Décrivez les changements apportés dans cette version..."></textarea>
            </div>
          </div>

          <div>
            <label class="flex items-center">
              <input type="checkbox" 
                     name="version[major]" 
                     value="1"
                     class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded">
              <span class="ml-2 text-sm text-gray-700">Version majeure</span>
            </label>
            <p class="mt-1 text-sm text-gray-500">
              Cochez si cette version contient des changements importants
            </p>
          </div>
        </div>

        <div class="mt-5 sm:mt-6 sm:grid sm:grid-cols-2 sm:gap-3 sm:grid-flow-row-dense">
          <button type="submit"
                  class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-indigo-600 text-base font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:col-start-2 sm:text-sm">
            Créer version
          </button>
          <button type="button"
                  onclick="closeModal('versionUploadModal')"
                  class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:col-start-1 sm:text-sm">
            Annuler
          </button>
        </div>
      </form>
    </div>
  </div>
</div>