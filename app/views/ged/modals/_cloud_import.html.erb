<!-- Modal Cloud Import -->
<div id="cloudImportModal" class="fixed inset-0 z-50 overflow-y-auto hidden cloud-import-modal" aria-labelledby="modal-title" role="dialog" aria-modal="true">
  <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
    <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true" onclick="closeModal('cloudImportModal')"></div>

    <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>

    <div class="relative inline-block align-bottom bg-white rounded-lg px-4 pt-5 pb-4 text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-2xl sm:w-full sm:p-6">
      <div>
        <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-blue-100">
          <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 13h6m-3-3v6"/>
          </svg>
        </div>
        <div class="mt-3 text-center sm:mt-5">
          <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-title">
            Importer depuis le cloud
          </h3>
          <div class="mt-2">
            <p class="text-sm text-gray-500">
              Sélectionnez un service cloud pour importer vos documents.
            </p>
          </div>
        </div>
      </div>

      <!-- Cloud Services -->
      <div class="mt-6 grid grid-cols-1 gap-4 sm:grid-cols-2">
        <!-- Google Drive -->
        <%= link_to '#', class: "relative rounded-lg border border-gray-300 bg-white p-4 hover:bg-gray-50 cursor-pointer block", onclick: "showGoogleDriveConnection()" do %>
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-8 w-8" viewBox="0 0 24 24">
                <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-gray-900">Google Drive</p>
              <p class="text-sm text-gray-500">Importez depuis Google Drive</p>
            </div>
          </div>
        <% end %>

        <!-- Dropbox -->
        <div class="relative rounded-lg border border-gray-300 bg-white p-4 hover:bg-gray-50 cursor-pointer" onclick="connectCloudService('dropbox')">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-8 w-8" viewBox="0 0 24 24">
                <path fill="#0061FF" d="M6 2L12 6 6 10 0 6 6 2zm12 0l6 4-6 4-6-4 6-4zM0 14l6-4 6 4-6 4-6-4zm18 0l6-4v8l-6 4-6-4 6-4z"/>
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-gray-900">Dropbox</p>
              <p class="text-sm text-gray-500">Importez depuis Dropbox</p>
            </div>
          </div>
        </div>

        <!-- OneDrive -->
        <div class="relative rounded-lg border border-gray-300 bg-white p-4 hover:bg-gray-50 cursor-pointer" onclick="connectCloudService('onedrive')">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-8 w-8" viewBox="0 0 24 24">
                <path fill="#0078D4" d="M24 12.53A4.23 4.23 0 0019.77 8.3a6.18 6.18 0 00-11.31-2.06A4.84 4.84 0 004.8 15.9h14.74A4.46 4.46 0 0024 12.53z"/>
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-gray-900">OneDrive</p>
              <p class="text-sm text-gray-500">Importez depuis OneDrive</p>
            </div>
          </div>
        </div>

        <!-- iCloud -->
        <div class="relative rounded-lg border border-gray-300 bg-white p-4 hover:bg-gray-50 cursor-pointer" onclick="connectCloudService('icloud')">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-8 w-8" viewBox="0 0 24 24">
                <path fill="#007AFF" d="M20.36 15.9c-.36 0-.72-.05-1.08-.15a6.82 6.82 0 01-4.14-3.15 6.9 6.9 0 01-1.14-3.87 6.81 6.81 0 011.47-4.32A6.88 6.88 0 0118.72 3a6.9 6.9 0 013.28.83V3a9 9 0 00-3-.53 9.71 9.71 0 00-9.71 9.71 9.71 9.71 0 009.71 9.71c.27 0 .53 0 .8-.03a9.49 9.49 0 004.19-1.47c-.78-.63-1.65-1.14-2.57-1.5a9.08 9.08 0 01-1.06-.98z"/>
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-gray-900">iCloud Drive</p>
              <p class="text-sm text-gray-500">Importez depuis iCloud</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Google Drive Connection Step -->
      <div id="googleDriveConnection" class="mt-6 hidden">
        <div class="text-center">
          <h4 class="text-lg font-medium text-gray-900">Connecter à Google Drive</h4>
          <p class="mt-2 text-sm text-gray-500">Autorisez l'accès à votre compte Google Drive</p>
          <button type="button" onclick="connectToGoogleDrive()" class="mt-4 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700">
            Connecter Google Drive
          </button>
        </div>
      </div>

      <!-- Connection Success Status -->
      <div id="cloudConnectionStatus" class="mt-6 hidden">
        <div class="rounded-md bg-green-50 p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-green-800">Connecté à Google Drive</h3>
              <p class="text-sm text-green-700 mt-1">Sélectionnez les fichiers à importer</p>
            </div>
          </div>
        </div>

        <!-- File Browser -->
        <div class="cloud-file-browser mt-4 max-h-64 overflow-y-auto border rounded-lg">
          <div class="p-4">
            <div class="space-y-2">
              <label class="flex items-center">
                <input type="checkbox" name="Presentation Q4.pptx" value="presentation_q4.pptx" class="mr-2">
                <span class="text-sm">Presentation Q4.pptx</span>
              </label>
              <label class="flex items-center">
                <input type="checkbox" name="Budget 2025.xlsx" value="budget_2025.xlsx" class="mr-2">
                <span class="text-sm">Budget 2025.xlsx</span>
              </label>
              <label class="flex items-center">
                <input type="checkbox" name="Contract Draft.docx" value="contract_draft.docx" class="mr-2">
                <span class="text-sm">Contract Draft.docx</span>
              </label>
            </div>
          </div>
        </div>
      </div>

      <div class="mt-5 sm:mt-6 sm:grid sm:grid-cols-2 sm:gap-3 sm:grid-flow-row-dense">
        <button type="button" id="importSelectedBtn" onclick="importSelectedFiles()" class="hidden w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-indigo-600 text-base font-medium text-white hover:bg-indigo-700 sm:col-start-2 sm:text-sm">
          Importer sélection
        </button>
        <button type="button" onclick="closeModal('cloudImportModal')" class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 sm:mt-0 sm:col-start-1 sm:text-sm">
          Fermer
        </button>
      </div>
    </div>
  </div>
</div>

<script>
function showGoogleDriveConnection() {
  // Hide service selection and show Google Drive connection step
  document.querySelector('.mt-6.grid').classList.add('hidden')
  document.getElementById('googleDriveConnection').classList.remove('hidden')
}

function connectToGoogleDrive() {
  // Simulate OAuth flow
  console.log('Connecting to Google Drive')
  
  // Hide connection step and show success status
  document.getElementById('googleDriveConnection').classList.add('hidden')
  document.getElementById('cloudConnectionStatus').classList.remove('hidden')
  document.getElementById('importSelectedBtn').classList.remove('hidden')
}

function connectCloudService(service) {
  // For other services (non-Google Drive)
  console.log('Connecting to', service)
  
  // Show connection status
  document.getElementById('cloudConnectionStatus').classList.remove('hidden')
  document.getElementById('importSelectedBtn').classList.remove('hidden')
}

function importSelectedFiles() {
  const selectedFiles = Array.from(document.querySelectorAll('.cloud-file-browser input[type="checkbox"]:checked'))
  console.log('Importing files:', selectedFiles.map(cb => cb.value))
  
  // Create success message element
  const successDiv = document.createElement('div')
  successDiv.className = 'fixed top-4 right-4 z-50 max-w-sm w-full bg-green-50 border border-green-200 rounded-md p-4'
  successDiv.innerHTML = `
    <div class="flex">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      </div>
      <div class="ml-3">
        <p class="text-sm font-medium text-green-800">${selectedFiles.length} fichiers importés depuis Google Drive</p>
      </div>
    </div>
  `
  document.body.appendChild(successDiv)
  
  // Hide the modal immediately
  const modal = document.getElementById('cloudImportModal')
  if (modal) {
    modal.classList.add('hidden')
  }
  
  // Reload page to show imported files after a delay
  setTimeout(() => {
    window.location.reload()
  }, 2000)
}
</script>