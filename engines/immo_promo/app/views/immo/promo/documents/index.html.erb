<div class="min-h-screen bg-gray-50 py-6">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Breadcrumb -->
    <nav class="flex mb-6" aria-label="Breadcrumb">
      <ol class="inline-flex items-center space-x-1 md:space-x-3">
        <li class="inline-flex items-center">
          <%= link_to "ImmoPromo", immo_promo_engine.root_path, 
                    class: "inline-flex items-center text-sm font-medium text-gray-700 hover:text-blue-600" %>
        </li>
        <li>
          <div class="flex items-center">
            <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
            </svg>
            <% case @documentable %>
            <% when Immo::Promo::Project %>
              <%= link_to "Projets", immo_promo_engine.projects_path, 
                        class: "ml-1 text-sm font-medium text-gray-700 hover:text-blue-600 md:ml-2" %>
            <% when Immo::Promo::Phase %>
              <%= link_to "Projet #{@documentable.project.name}", immo_promo_engine.project_path(@documentable.project), 
                        class: "ml-1 text-sm font-medium text-gray-700 hover:text-blue-600 md:ml-2" %>
            <% when Immo::Promo::Task %>
              <%= link_to "Projet #{@documentable.project.name}", immo_promo_engine.project_path(@documentable.project), 
                        class: "ml-1 text-sm font-medium text-gray-700 hover:text-blue-600 md:ml-2" %>
            <% when Immo::Promo::Permit %>
              <%= link_to "Projet #{@documentable.project.name}", immo_promo_engine.project_path(@documentable.project), 
                        class: "ml-1 text-sm font-medium text-gray-700 hover:text-blue-600 md:ml-2" %>
            <% when Immo::Promo::Stakeholder %>
              <%= link_to "Projet #{@documentable.project.name}", immo_promo_engine.project_path(@documentable.project), 
                        class: "ml-1 text-sm font-medium text-gray-700 hover:text-blue-600 md:ml-2" %>
            <% end %>
          </div>
        </li>
        <% unless @documentable.is_a?(Immo::Promo::Project) %>
          <li>
            <div class="flex items-center">
              <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
              </svg>
              <% case @documentable %>
              <% when Immo::Promo::Phase %>
                <%= link_to "Phase #{@documentable.name}", immo_promo_engine.project_phase_path(@documentable.project, @documentable), 
                          class: "ml-1 text-sm font-medium text-gray-700 hover:text-blue-600 md:ml-2" %>
              <% when Immo::Promo::Task %>
                <%= link_to "Tâche #{@documentable.name}", immo_promo_engine.project_phase_task_path(@documentable.project, @documentable.phase, @documentable), 
                          class: "ml-1 text-sm font-medium text-gray-700 hover:text-blue-600 md:ml-2" %>
              <% when Immo::Promo::Permit %>
                <%= link_to "Permis #{@documentable.permit_name}", immo_promo_engine.project_permit_path(@documentable.project, @documentable), 
                          class: "ml-1 text-sm font-medium text-gray-700 hover:text-blue-600 md:ml-2" %>
              <% when Immo::Promo::Stakeholder %>
                <%= link_to "Intervenant #{@documentable.name}", immo_promo_engine.project_stakeholder_path(@documentable.project, @documentable), 
                          class: "ml-1 text-sm font-medium text-gray-700 hover:text-blue-600 md:ml-2" %>
              <% end %>
            </div>
          </li>
        <% end %>
        <li aria-current="page">
          <div class="flex items-center">
            <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
            </svg>
            <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2">Documents</span>
          </div>
        </li>
      </ol>
    </nav>

    <!-- Page Content -->
    <div class="space-y-6">
      <!-- Context Information Card -->
      <div class="bg-white shadow rounded-lg p-6">
        <div class="flex items-start justify-between">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <% case @documentable %>
              <% when Immo::Promo::Project %>
                <div class="h-10 w-10 rounded-lg bg-blue-100 flex items-center justify-center">
                  <svg class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                  </svg>
                </div>
              <% when Immo::Promo::Phase %>
                <div class="h-10 w-10 rounded-lg bg-purple-100 flex items-center justify-center">
                  <svg class="h-6 w-6 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                  </svg>
                </div>
              <% when Immo::Promo::Task %>
                <div class="h-10 w-10 rounded-lg bg-green-100 flex items-center justify-center">
                  <svg class="h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
              <% when Immo::Promo::Permit %>
                <div class="h-10 w-10 rounded-lg bg-yellow-100 flex items-center justify-center">
                  <svg class="h-6 w-6 text-yellow-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                  </svg>
                </div>
              <% when Immo::Promo::Stakeholder %>
                <div class="h-10 w-10 rounded-lg bg-indigo-100 flex items-center justify-center">
                  <svg class="h-6 w-6 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                  </svg>
                </div>
              <% end %>
            </div>
            <div class="ml-4">
              <h1 class="text-lg font-medium text-gray-900">
                Documents - 
                <% case @documentable %>
                <% when Immo::Promo::Project %>
                  Projet <%= @documentable.name %>
                <% when Immo::Promo::Phase %>
                  Phase <%= @documentable.name %>
                <% when Immo::Promo::Task %>
                  Tâche <%= @documentable.name %>
                <% when Immo::Promo::Permit %>
                  Permis <%= @documentable.permit_name %>
                <% when Immo::Promo::Stakeholder %>
                  Intervenant <%= @documentable.name %>
                <% end %>
              </h1>
              <p class="text-sm text-gray-500">
                <% case @documentable %>
                <% when Immo::Promo::Project %>
                  Référence: <%= @documentable.reference_number %> • Statut: <%= @documentable.status.humanize %>
                <% when Immo::Promo::Phase %>
                  Projet: <%= @documentable.project.name %> • Statut: <%= @documentable.status.humanize %>
                <% when Immo::Promo::Task %>
                  Phase: <%= @documentable.phase.name %> • Priorité: <%= @documentable.priority.humanize %>
                <% when Immo::Promo::Permit %>
                  Type: <%= @documentable.permit_type.humanize %> • Statut: <%= @documentable.status.humanize %>
                <% when Immo::Promo::Stakeholder %>
                  Type: <%= @documentable.stakeholder_type.humanize %> • <%= @documentable.contact_info %>
                <% end %>
              </p>
            </div>
          </div>
          
          <!-- Quick Actions -->
          <div class="flex space-x-3">
            <% case @documentable %>
            <% when Immo::Promo::Project %>
              <%= link_to immo_promo_engine.project_path(@documentable), 
                        class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
                <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
                Retour au projet
              <% end %>
            <% when Immo::Promo::Phase %>
              <%= link_to immo_promo_engine.project_phase_path(@documentable.project, @documentable), 
                        class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
                <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
                Retour à la phase
              <% end %>
            <% when Immo::Promo::Task %>
              <%= link_to immo_promo_engine.project_phase_task_path(@documentable.project, @documentable.phase, @documentable), 
                        class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
                <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
                Retour à la tâche
              <% end %>
            <% when Immo::Promo::Permit %>
              <%= link_to immo_promo_engine.project_permit_path(@documentable.project, @documentable), 
                        class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
                <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
                Retour au permis
              <% end %>
            <% when Immo::Promo::Stakeholder %>
              <%= link_to immo_promo_engine.project_stakeholder_path(@documentable.project, @documentable), 
                        class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
                <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
                Retour à l'intervenant
              <% end %>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Document List Component -->
      <%= render Immo::Promo::Documents::DocumentListComponent.new(
            documents: @documents,
            documentable: @documentable,
            current_user: current_user,
            show_filters: true,
            show_stats: true
          ) %>
    </div>
  </div>
</div>