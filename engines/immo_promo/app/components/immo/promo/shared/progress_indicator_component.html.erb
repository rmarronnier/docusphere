<div class="w-full">
  <% if show_label %>
    <div class="flex items-center justify-between text-sm mb-1">
      <span class="text-gray-600">Progression</span>
      <span class="font-medium text-gray-900"><%= formatted_progress %></span>
    </div>
  <% end %>
  <div class="bg-gray-200 rounded-full <%= height_class %> overflow-hidden">
    <div class="<%= progress_color %> <%= height_class %> rounded-full transition-all duration-300 ease-in-out" 
         style="width: <%= progress %>%"></div>
  </div>
</div>