<div class="<%= bg_color %> rounded-lg shadow p-6">
  <div class="flex items-center">
    <%= render Ui::IconComponent.new(name: icon, classes: "h-8 w-8 #{icon_color}") %>
    <div class="ml-4 flex-1">
      <h3 class="text-lg font-semibold <%= value_color %>"><%= formatted_value %></h3>
      <p class="text-sm text-gray-600"><%= title %></p>
      <% if subtitle.present? %>
        <p class="text-xs text-gray-500 mt-1"><%= subtitle %></p>
      <% end %>
    </div>
    <% if trend.present? %>
      <div class="ml-2 flex items-center">
        <%= render Ui::IconComponent.new(name: trend_icon, classes: "h-5 w-5 #{trend_color}") %>
        <% if trend_value.present? %>
          <span class="text-sm <%= trend_color %> ml-1"><%= trend_value %></span>
        <% end %>
      </div>
    <% end %>
  </div>
</div>