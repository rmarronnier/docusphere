<div class="bg-white shadow rounded-lg p-4 sm:p-6">
  <h3 class="text-lg font-medium text-gray-900 mb-6">Timeline du projet</h3>
  
  <% if phases.any? %>
    <div class="flow-root">
      <ul role="list" class="-mb-8">
        <% phases.each_with_index do |phase, index| %>
          <%= render Immo::Promo::Timeline::PhaseItemComponent.new(
            phase: phase,
            current_phase: current_phase,
            is_last: index == phases.count - 1
          ) %>
        <% end %>
      </ul>
    </div>
    
    <!-- Timeline summary -->
    <%= render Immo::Promo::Timeline::SummaryComponent.new(phases: phases) %>
  <% else %>
    <p class="text-gray-500 text-center py-8">Aucune phase d√©finie</p>
  <% end %>
</div>