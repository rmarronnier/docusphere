<div class="<%= card_classes %>">
  <div class="<%= card_padding_classes %>">
    <!-- Project Header -->
    <%= render Immo::Promo::ProjectCard::HeaderComponent.new(
          project: project, 
          show_thumbnail: show_thumbnail,
          variant: variant
        ) %>

    <!-- Project Info -->
    <%= render Immo::Promo::ProjectCard::InfoComponent.new(
          project: project,
          show_financial: show_financial,
          variant: variant
        ) %>

    <!-- Progress Bar (hidden in compact mode) -->
    <% unless compact_layout? %>
      <%= render Immo::Promo::ProjectCard::ProgressComponent.new(project: project) %>
    <% end %>

    <!-- Dates -->
    <%= render Immo::Promo::ProjectCard::DatesComponent.new(project: project) %>

    <!-- Actions -->
    <% if show_actions %>
      <%= render Immo::Promo::ProjectCard::ActionsComponent.new(project: project) %>
    <% end %>
  </div>

  <!-- Alerts if any -->
  <%= render Immo::Promo::ProjectCard::AlertComponent.new(project: project) %>
</div>