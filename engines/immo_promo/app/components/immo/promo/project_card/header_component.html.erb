<div class="flex items-center justify-between mb-4">
  <div class="flex items-center space-x-3">
    <div class="flex-shrink-0">
      <div class="w-10 h-10 bg-indigo-100 rounded-lg flex items-center justify-center">
        <%= render Ui::IconComponent.new(name: :office_building, size: 6, css_class: 'text-indigo-600') %>
      </div>
    </div>
    <div class="flex-1 min-w-0">
      <h3 class="text-lg font-medium text-gray-900 truncate">
        <%= link_to project.name, project_path, class: "hover:text-indigo-600" %>
      </h3>
      <p class="text-sm text-gray-500"><%= project.reference_number %></p>
    </div>
  </div>
  <%= render Ui::StatusBadgeComponent.new(
    status: project.status,
    size: :small,
    color: status_color_mapping
  ) %>
</div>